{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "strict": true,
    "noEmitOnError": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "newLine": "LF",
    "outDir": "lib/",
    "sourceMap": true,
    "declaration": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node", "jest"]
  },
  "include": ["src"]
}
