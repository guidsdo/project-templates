{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "strict": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "newLine": "LF",
    "outDir": "dist/",
    "sourceMap": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["node"]
  }
}
